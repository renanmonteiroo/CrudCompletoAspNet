@model IEnumerable<MeuCrudCompleto.Models.Vendedor>

@{
    ViewData["Title"] = "Vendedores";
}
<br />
<div align="center">
    <h2>@ViewData["Title"]</h2>
</div>
<p>
    <a asp-action="Create" class="btn btn-success">Criar Novo</a>
</p>

<table class="table table-striped table-hover" >
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataAniversario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseSalario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataAniversario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BaseSalario)
                </td>
                <td>                    
                        <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.Id">Editar</a>
                    
                        <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Detalhes</a>
                                       
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Deletar</a>
                    
                </td>
            </tr>

        }
    </tbody>

</table>
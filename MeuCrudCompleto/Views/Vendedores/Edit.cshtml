@model MeuCrudCompleto.Models.ViewsModels.VendedorCadastroViewModel

@{
    ViewData["Title"] = "Editar";
}
<br />
<h2>@ViewData["Title"]</h2>

<h4>Vendedor</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Vendedor.Id" />
            <div class="form-group">
                <label asp-for="Vendedor.Nome" class="control-label"></label>
                <input asp-for="Vendedor.Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.Email" class="control-label"></label>
                <input asp-for="Vendedor.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.DataAniversario" class="control-label"></label>
                <input asp-for="Vendedor.DataAniversario" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.BaseSalario" class="control-label"></label>
                <input asp-for="Vendedor.BaseSalario" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.DepartamentoId" class="control-label"></label>
                <select asp-for="Vendedor.DepartamentoId" asp-items="@(new SelectList(Model.Departamentos,"id","nome"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
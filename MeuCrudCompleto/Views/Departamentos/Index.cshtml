@model IEnumerable<MeuCrudCompleto.Models.Departamento>

@{
    ViewData["Title"] = "Departamentos";
}
<br />
<div align="center">
    <h1>Departamentos</h1>
</div>
<p>    
        <a asp-action="Create" class="btn btn-success">Criar Novo</a>    
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nome)
                </td>
                <td>                    
                        <a asp-action="Edit"class="btn btn-secondary" asp-route-id="@item.id">Editar</a>                    
                   
                        <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.id">Detalhes</a>
                                       
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.id">Deletar</a>
                    
                </td>
            </tr>
        }
    </tbody>
</table>
